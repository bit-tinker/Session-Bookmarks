{
	"manifest_version": 2,
	"name": "Window Saver",
	"version": "1.5.1",

	"description": "Saves and restores complete windows in bookmarks.",
	"homepage_url": "https://github.com/bit-tinker/Window-Saver",

	"icons": {
		"16": "icons/dark16.png",
		"48": "icons/dark48.png",
		"128": "icons/dark128.png"
	},

	"permissions": [
		"bookmarks",
		"tabs",
		"storage"
	],
	
	"incognito": "spanning",

	"background": {
		"scripts": [
			"browser-polyfill.js"
			, "background.js"
		]
	},
	
	"options_ui": {
		"page": "options/options.html"
	},

	"browser_action": {
		"default_title": "Window Saver",
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/dark16.png",
			"24": "icons/dark24.png",
			"32": "icons/dark32.png"
		},
		"theme_icons": [
			{
				"size": 16,
				"light": "icons/light16.png",
				"dark": "icons/dark16.png"
			}, {
				"size": 24,
				"light": "icons/light24.png",
				"dark": "icons/dark24.png"
			}, {
				"size": 32,
				"light": "icons/light32.png",
				"dark": "icons/dark32.png"
			}
		]
	}

}
