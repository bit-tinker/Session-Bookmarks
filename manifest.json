{
	"manifest_version": 2,
	"name": "Window Saver",
	"version": "1.5",

	"description": "Saves and restores complete windows in bookmarks.",
	"homepage_url": "https://github.com/bit-tinker/Window-Saver",

	"applications":
	{
	    "gecko":
		{
			"id": "{18f88f40-01fb-4324-86cb-f99cd32f2de4}",
			"strict_min_version": "55.0"
	    }
	},

	"icons": {
		"48": "icons/dark.svg",
		"64": "icons/dark.svg",
		"96": "icons/dark.svg",
		"128": "icons/dark.svg"
	},

	"permissions": [
		"bookmarks",
		"tabs",
		"storage"
	],

	"background": {
		"scripts": ["background.js"]
	},
	
	"options_ui": {
		"page": "options/options.html"
	},

	"browser_action": {
		"default_title": "Window Saver",
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/dark.svg",
			"32": "icons/dark.svg",
			"64": "icons/dark.svg",
			"128": "icons/dark.svg"
		},
		"theme_icons": [
			{
				"size": 16,
				"light": "icons/light.svg",
				"dark": "icons/dark.svg"
			}, {
				"size": 32,
				"light": "icons/light.svg",
				"dark": "icons/dark.svg"
			}, {
				"size": 64,
				"light": "icons/light.svg",
				"dark": "icons/dark.svg"
			}, {
				"size": 128,
				"light": "icons/light.svg",
				"dark": "icons/dark.svg"
			}
		]
	}

}
